{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "World Corruption Perception Index (CPI)",
      "subtitle": ["How corrupt a countries public sector is (2021).","100 = Clean, 0 = Corrupt", "Source: Transparancy International"],
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black",
      "scheme": {"color": ""}
    },
    "config": {"background": "white", "view": {"stroke": "transparent"}},
    "width": 600,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/MeeloshE/MeeloshE.github.io/main/world.geojson",
      "format": {"property": "features"}
    },
    "projection": {"type": "mercator"},
    "transform": [
      {
        "lookup": "properties.ADMIN",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/MeeloshE/MeeloshE.github.io/main/cpigdp.csv"
          },
          "key": "country",
          "fields": ["cpi"]
        }
      }
    ],
    "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.1},
    "encoding": {
      "color": {
        "scale": {"scheme": "darkred"},
        "field": "cpi",
        "legend": {"title": "CPI", "orient": "right", "direction": "vertical"},
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.ADMIN", "type": "nominal", "title": "Country"},
        {"field": "cpi", "title": "Corruption Level"}
      ]
    }
  }