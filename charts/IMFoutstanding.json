{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "IMF lending outstanding",
      "subtitle":"Credit outstanding to all members SDRs (billions), Source: IMF",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  
  "data":{"url": "https://raw.githubusercontent.com/MeeloshE/MeeloshE.github.io/main/data_IMF_creditOutstandingClean.csv"},
  
"transform": [
  {"calculate": "datum.Totals/1000000000", "as": "billions"}
],

  "height": 300,
  "width":300,

  "mark":{
    "type": "bar",
    "color":"#FFA500",
    "strokeWidth":2,
    "opacity":1},

"encoding": {
     "x": {
       "field": "Year",
       "type": "temporal",
       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "tickCount":12,
         "labelAngle": 45}},

      "y": {
        "field": "billions",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}}
}
  
 

}

