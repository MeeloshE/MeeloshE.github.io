{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
        "text": "Voice and Accountability on Corruption",
        "subtitle":["How does a countrys's access of freedom to choose government, freedom of expression and media affect how corrupt it is."," World Bank, Transparancy International, (2018)"],
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"
      },
    "data": {
      "url":"https://raw.githubusercontent.com/MeeloshE/MeeloshE.github.io/main/voicecpi.csv"
    },
    "mark": {"type":"point"},
    "encoding": {
      "x": {
        "field": "cpi", "type": "quantitative",
        "scale":{"domain":[20,90]},
        "axis": {
          "domain": false,
          "ticks": false,
          "labelAngle": 0,
          "labelPadding": 4
        }
      },
      "y": {
        "field": "voice", "type": "quantitative",
        "axis": {
          "gridColor": {
            "condition": {"test": "datum.value === 0", "value": "black"},
            "value": "#ddd"
          }
        }
        
      },
      "color":{"field":"country", "type": "nominal", "title": "Country"},
      "size":{"field":""},
      "tooltip":[{"field":"country", "type": "nominal", "title":"Country"}, {"field":"cpi", "type": "quantitative", "title":"Corruption Perception"}, {"field":"voice", "type": "quantitative", "title":"Voice and Accountability"}]
    }
  }
  