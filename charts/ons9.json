{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "width":200,
    "height":200,

    "data": {
       "url": "https://api.allorigins.win/raw?url=https://api.ons.gov.uk/timeseries/CHZX/dataset/MM23/data",
       "format": {
           "type":"json",
           "property": "years"}},


    "title": {
        "text": "CPI Weights (2015=100)",
        "subtitle": "Transport",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},

    

    "mark":{
        "type": "line",
        "color":"#FFA500",
        "strokeWidth":2,
        "opacity":1},
 

    "encoding": {
      "x": {"field": "date", "type": "temporal",
        "axis": {"title": "Date", "grid": false, "labelAngle": 45}
            },
        
      "y": {"field": "value", "type": "quantitative"}
    }
}