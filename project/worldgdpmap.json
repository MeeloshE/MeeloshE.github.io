{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "World GDP Per Capita",
      "subtitle": ["GDP Per Capita for each country in 2021", "Source: World Bank"],
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black",
      "scheme": {"color": ""}
    },
    "config": {"background": "white", "view": {"stroke": "transparent"}},
    "width": 600,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/MeeloshE/MeeloshE.github.io/main/world.geojson",
      "format": {"property": "features"}
    },
    "projection": {"type": "mercator"},
    "transform": [
      {
        "lookup": "properties.ADMIN",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/MeeloshE/MeeloshE.github.io/main/GDPcapcleaner.csv"
          },
          "key": "country",
          "fields": ["gdppercap"]
        }
      }
    ],
    "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.1},
    "encoding": {
      "color": {
        "scale": {"scheme": "yellowgreenblue"},
        "field": "gdppercap",
        "legend": {"title": "GDP Per Capita", "orient": "right", "direction": "vertical"},
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.ADMIN", "type": "nominal", "title": "Country"},
        {"field": "gdppercap", "title": "GDP Per Capita"}
      ]
    }
  }